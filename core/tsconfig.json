{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"paths": {
			"@api/*": ["./src/*"],
			"@config": ["./src/config"],
			"@orm": ["./src/ormconfig"]
		}
	},
	"exclude": ["node_modules", "dist", "migrations"]
}
