<section class='hero'>
	<div class='hero-body'>
		<div class='container secundary'>
			<section id='about' class='section'>
				<div class='columns'>
					<div class='column is-6 over' data-aos="flip-right">
						<div class='content is-medium has-text-centered'>
							<h1 class='title has-text-black'>
								{{about.a}}
							</h1>
						</div>
						<div class='content is-medium has-text-justified has-text-gray is-size-6'>
							{{#each about.b}}
							<p>
								{{this}}
							</p>
							{{/each}}
						</div>
					</div>
					<div class='column'>
						<div id="carousel" class="slider carousel pt-4 mt-6">
							<div class="item-1">
								<figure class="carousel-image">
									{{#image_src 'image3.png' '' '' ''}}{{/image_src}}
								</figure>
							</div>
							<div class="item-2">
								<figure class="carousel-image">
									{{#image_src 'image4.png' '' '' ''}}{{/image_src}}
								</figure>
							</div>
							<div class="item-3">
								<figure class="carousel-image">
									{{#image_src 'image2.png' '' '' ''}}{{/image_src}}
								</figure>
							</div>
						</div>
						<script>
							bulmaCarousel.attach('#carousel', {
								slidesToScroll: 1,
								slidesToShow: 1,
								autoplay: true,
								autoplaySpeed: 4000,
								loop: true,
								infinite: true
							});
						</script>
					</div>
				</div>
			</section>
		</div>
	</div>
</section>

<script>
	AOS.init({
		duration: 1200,
	});
</script>

<section id="timeline" class="section mt-6">
	<div class='columns is-desktop'>
		<div class='column'></div>
		<div class='column is-7'>
			<div class='timeline'>
				{{#each about.timeline}}
				<div class='timeline-header'>
					<span class='tag is-medium'>
						{{this.a}}
					</span>
				</div>
				{{#each this.b}}
				<div class='timeline-item' data-aos="zoom-in">
					<div class='timeline-marker'></div>
					<div class='timeline-content'>
						<p class='has-text-left'>
							{{this}}
						</p>
					</div>
				</div>
				{{/each}}
				{{/each}}
			</div>
		</div>
		<div class='column'></div>
	</div>
</section>
