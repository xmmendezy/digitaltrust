<section id="info" class="section">
	<div class="glide">
		<div class="glide__track" data-glide-el="track">
			<ul class="glide__slides">
				<li class="glide__slide">{{#image_src 'slider-1.jpg' ''}}{{/image_src}}</li>
				<li class="glide__slide">{{#image_src 'slider-2.jpg' ''}}{{/image_src}}</li>
				<li class="glide__slide">{{#image_src 'slider-3.jpg' ''}}{{/image_src}}</li>
