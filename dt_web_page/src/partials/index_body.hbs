					<div class="column is-8">
						<div class="field">
							<div class="control has-floating-label"><input class="input is-medium with-floating-label"
									id="name" placeholder=" " type="text" required="" autocomplete="off"> <label
									class="label is-floating-label has-text-gray" for="name">e-mail</label></div>
						</div>
					</div>
					<div class="column btn-content">
						<button class="button is-white is-outlined btn-send">
							{{ benefits.send }}
						</button>
					</div>
				</div>
			</div>
		</div>
		<div class="column is-6 column-trading">
			{{> tradingview }}
		</div>
	</div>
</section>

