<section class='hero'>
	<div class='hero-body'>
		<div class='container secundary'>
			<section id='help' class='section'>
				<div class='content is-medium has-text-centered'>
					<h1 class='title has-text-black'>
						{{help-center.title}}
					</h1>
				</div>
				<div class='content is-medium has-text-justified has-text-gray'>
					<section class='accordions'>
						{{#each help-center.sections}}
							<article class='accordion'>
								<div class='accordion-header toggle'>
									<p>
										{{this.title}}
									</p>
								</div>
								<div class='accordion-body'>
									<div class='accordion-content'>
										{{#each this.texts}}
											<p>
												{{this.text}}
											</p>
											{{#if this.image}}
												<div class='has-text-centered'>
													{{#image_src this.image 'image-help'}}{{/image_src}}
												</div>
											{{/if}}
										{{/each}}
									</div>
								</div>
							</article>
						{{/each}}
					</section>
				</div>
			</section>
		</div>
	</div>
</section>
